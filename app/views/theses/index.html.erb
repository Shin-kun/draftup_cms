<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<br />

<%= link_to("New Thesis", new_thesis_path, class: "btn btn-primary") %>
<br />
<br />

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download link</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <%= @theses.each do |thesis| %>

    <tr>
      <td><%= thesis.name %></td>
      <td><%= link_to("Download thesis", thesis.attachment_url) %></td>
      <td><%= button_to("Delete", thesis, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{thesis.name}?") %></td>
    </tr>

    <% end %>
  </tbody>
</table>
